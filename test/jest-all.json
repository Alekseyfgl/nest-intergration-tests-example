{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testMatch": [
    "**/test/**/*.test.js",
    "**/test/**/*.spec.js",
    "**/test/**/*.spec.ts",
    "**/test/**/*.integration.spec.ts",
    "**/test/**/*.e2e-spec.ts"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s",
    "**/*.js"
  ],
  "coverageDirectory": "../coverage-all",
  "verbose": true
} 